{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2019"],
    "module": "nodenext",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}